{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about_url": "https://github.com/depositar-io/ckanext-data-depositario",
  "dataset_fields": [
    {
      "field_name": "title",
      "label": {
        "en": "Title",
	"zh_TW": "標題"
      },
      "preset": "title",
      "form_placeholder": {
        "en": "eg. A descriptive title",
	"zh_TW": "例如：一個描述性的標題"
      }
    },
    {
      "field_name": "name",
      "label": {
        "en": "URL",
	"zh_TW": "網址"
      },
      "preset": "dataset_slug",
      "validators": "not_empty unicode package_name_validator",
      "form_placeholder": {
        "en": "eg. my-dataset",
	"zh_TW": "例如：我的資料集"
      }
    },
    {
      "field_name": "notes",
      "label": {
        "en": "Description",
        "zh_TW": "摘要"
      },
      "form_snippet": "markdown.html",
      "form_placeholder": {
        "en": "eg. Some useful notes about the data",
        "zh_TW": "例如: 此資料一些有用的紀錄"
      }
    },
    {
      "field_name": "data_type",
      "label": {
        "en": "Data Type",
        "zh_TW": "資料類型"
      },
      "preset": "multiple_select",
      "form_select_attrs": {
        "data-module": "select2-enabler"
      },
      "required": true,
      "choices": [
        {
          "value": "archive",
          "label": {
            "en": "Archived data",
            "zh_TW": "壓縮檔資料"
          }
        },
        {
          "value": "code",
          "label": {
            "en": "Source code",
            "zh_TW": "原始碼"
          }
        },
        {
          "value": "config",
          "label": {
            "en": "Configuration data",
            "zh_TW": "組態資料"
          }
        },
        {
          "value": "database",
          "label": {
            "en": "Databases",
            "zh_TW": "資料庫"
           }
        },
        {
          "value": "doc",
          "label": {
            "en": "Standard office documents",
            "zh_TW": "辦公軟體文件"
          }
        },
        {
          "value": "graphic",
          "label": {
            "en": "Structured graphics",
            "zh_TW": "結構化圖形"
          }
        },
        {
          "value": "image",
          "label": {
            "en": "Images",
            "zh_TW": "影像"
          }
        },
        {
          "value": "multimedia",
          "label": {
            "en": "Audiovisual data",
            "zh_TW": "影音資料"
          }
        },
        {
          "value": "network",
          "label": {
            "en": "Networkbased data",
            "zh_TW": "網路通訊資料"
          }
        },
        {
          "value": "raw",
          "label": {
            "en": "Raw data",
            "zh_TW": "原始輸出資料"
          }
        },
        {
          "value": "science",
          "label": {
            "en": "Scientific and statistical data formats",
            "zh_TW": "科學與統計資料"
          }
        },
        {
          "value": "software",
          "label": {
            "en": "Software applications",
            "zh_TW": "應用程式"
          }
        },
        {
          "value": "structured",
          "label": {
            "en": "Structured text",
            "zh_TW": "結構化文字資料"
          }
        },
        {
          "value": "text",
          "label": {
            "en": "Plain text",
            "zh_TW": "純文字資料"
          }
        },
        {
          "value": "other",
          "label": {
            "en": "Other",
            "zh_TW": "其他"
          }
        }
      ]
    },
    {
      "field_name": "keywords",
      "label": {
        "en": "Wikidata Keywords",
        "zh_TW": "Wikidata 關鍵字"
      },
      "preset": "wikidata_keyword"
    },
    {
      "field_name": "tag_string",
      "label": {
        "en": "Tags",
        "zh_TW": "標籤"
      },
      "preset": "tag_string_autocomplete",
      "form_placeholder": {
        "en": "eg. economy, mental health, government",
        "zh_TW": "例如：經濟、醫療衛生、政府"
      }
    },
    {
      "field_name": "language",
      "label": {
        "en": "Language",
        "zh_TW": "語言"
      },
      "preset": "multiple_select",
      "validators": "value_string_convert scheming_multiple_choice",
      "form_snippet": "multiple_select_pagination.html",
      "help_text": {
        "en": "Coded in ISO 639-3 Language Codes (three-letter codes within parentheses for each language on the list). Please refer to https://iso639-3.sil.org/code_tables.",
        "zh_TW": "使用 ISO 639-3 語言標碼 (各語言後方括號內三碼)。參見 https://iso639-3.sil.org/code_tables。"
      },
      "choices_helper": "schema_language_choices",
      "form_select_attrs": {
        "data-module": "select2-pagination",
        "data-module-multiple": "true"
      }
    },
    {
      "field_name": "remarks",
      "label": {
        "en": "Remarks",
        "zh_TW": "備註"
      },
      "form_snippet": "markdown.html",
      "display_snippet": "markdown.html"
    },
    {
      "field_name": "temp_res",
      "label": {
        "en": "Temporal Resolution",
        "zh_TW": "時間解析度"
      },
      "preset": "select",
      "choices": [
        {
          "value": "year",
          "label": {
            "en": "Year",
            "zh_TW": "年"
          }
        },
       {
         "value": "decade",
         "label": {
           "en": "Decade",
           "zh_TW": "十年"
         }
       },
       {
         "value": "century",
         "label": {
           "en": "Century",
           "zh_TW": "一百年"
         }
       },
       {
         "value": "date",
         "label": {
           "en": "Date",
           "zh_TW": "日"
         }
       },
       {
         "value": "month",
         "label": {
           "en": "Month",
           "zh_TW": "月"
         }
       }
      ]
    },
    {
      "field_name": "start_time",
      "label": {
        "en": "Start Time",
        "zh_TW": "起始時間"
      },
      "preset": "date_modified",
      "validators": "ignore_empty temp_res_validator",
      "help_text": {
        "en": "Depend on the temporal resolution setting. Acceptable formats: 'YYYY', 'YYYY-MM', or 'YYYY-MM-DD'.",
        "zh_TW": "由時間解析度決定。接受的格式為 'YYYY' (年/十年/百年)、'YYYY-MM' (月)、'YYYY-MM-DD' (日)。"
      },
      "help_inline": true
    },
    {
      "field_name": "end_time",
      "label": {
        "en": "End Time",
        "zh_TW": "結束時間"
      },
      "preset": "date_modified",
      "validators": "ignore_empty temp_res_validator",
      "help_text": {
        "en": "Depend on the temporal resolution setting. Acceptable formats: 'YYYY', 'YYYY-MM', or 'YYYY-MM-DD'.",
        "zh_TW": "由時間解析度決定。接受的格式為 'YYYY' (年/十年/百年)、'YYYY-MM' (月)、'YYYY-MM-DD' (日)。"
      },
      "help_inline": true
    },
    {
      "field_name": "spatial",
      "label": {
        "en": "Spatial",
        "zh_TW": "空間範圍"
      },
      "validators": "ignore_empty json_validator remove_blank_wrap",
      "form_placeholder": {
        "en": "Accept GeoJSON format",
        "zh_TW": "僅接受 GeoJSON"
      },
      "form_snippet": "textarea.html",
      "display_snippet": "collapse_text.html",
      "help_text": {
        "en": "This column is used for geo-indexing the dataset. Check http://geojson.org/ for details.",
        "zh_TW": "此欄位將作為空間索引之用。請參閱 http://geojson.org/ 的說明。"
      }
    },
    {
      "field_name": "x_min",
      "label": {
        "en": "X.min",
        "zh_TW": "空間範圍.X.min"
      },
      "validators": "ignore_empty long_validator",
      "form_placeholder": {
        "en": "Westmost longitude of the spatial extent",
        "zh_TW": "填寫圖資空間四至範圍之最西經度值"
      }
    },
    {
      "field_name": "x_max",
      "label": {
        "en": "X.max",
        "zh_TW": "空間範圍.X.max"
      },
      "validators": "ignore_empty long_validator",
      "form_placeholder": {
        "en": "Eastmost longitude of the spatial extent",
        "zh_TW": "填寫圖資空間四至範圍之最東經度值"
      }
    },
    {
      "field_name": "y_min",
      "label": {
        "en": "Y.min",
        "zh_TW": "空間範圍.Y.min"
      },
      "validators": "ignore_empty lat_validator",
      "form_placeholder": {
        "en": "Southmost latitude of the spatial extent",
        "zh_TW": "填寫圖資空間四至範圍之最南緯度值"
      }
    },
    {
      "field_name": "y_max",
      "label": {
        "en": "Y.max",
        "zh_TW": "空間範圍.Y.max"
      },
      "validators": "ignore_empty lat_validator",
      "form_placeholder": {
        "en": "Northmost latitude of the spatial extent",
        "zh_TW": "填寫圖資空間四至範圍之最北緯度值"
      }
    },
    {
      "field_name": "spatial_res",
      "label": {
        "en": "Spatial Resolution",
        "zh_TW": "空間解析度"
      },
      "validators": "ignore_empty positive_float_validator",
      "form_placeholder": {
        "en": "Spatial resolution (m) of source",
        "zh_TW": "填寫資料空間解析度數值，以公尺為單位"
      }
    },
    {
      "field_name": "license_id",
      "label": {
        "en": "License",
        "zh_TW": "授權"
      },
      "required": true,
      "sorted_choices": false,
      "choices_helper": "schema_license_choices",
      "form_snippet": "license.html"
    },
    {
      "field_name": "author",
      "label": {
        "en": "Author",
        "zh_TW": "產製者"
      },
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:creator",
      "required": true
    },
    {
      "field_name": "created_time",
      "label": {
        "en": "Created Time",
        "zh_TW": "資料產製時間"
      },
      "preset": "date_modified",
      "validators": "ignore_empty date_validator",
      "has_temp_res": false,
      "help_text": {
        "en": "Acceptable formats: 'YYYY', 'YYYY-MM', or 'YYYY-MM-DD'. Missing month (Day) will be filled with '01'",
        "zh_TW": "接受的格式為 'YYYY'、'YYYY-MM'、'YYYY-MM-DD'。若未填寫月 (日)，則由 '01' 取代。"
      }
    },
    {
      "field_name": "process_step",
      "label": {
        "en": "Process Step",
        "zh_TW": "資料處理歷程"
      },
      "form_placeholder": {
        "en": "Steps of data generating process",
        "zh_TW": "以文字描述資料形成所經過之處理過程，建議以各階段或步驟為導向進行填寫"
      },
      "form_snippet": "markdown.html",
      "display_snippet": "markdown.html"
    },
    {
      "field_name": "owner_org",
      "label": {
        "en": "Project",
        "zh_TW": "專案"
      },
      "preset": "dataset_organization"
    },
    {
      "field_name": "contact_person",
      "label": {
        "en": "Contact Person",
        "zh_TW": "聯絡人"
      },
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:contributor"
    },
    {
      "field_name": "contact_email",
      "label": {
        "en": "Contact Person Email",
        "zh_TW": "聯絡人的電子郵件"
      },
      "validators": "email_validator",
      "form_placeholder": "joe@example.com",
      "display_property": "dc:contributor",
      "display_snippet": "email.html"
    },
    {
      "field_name": "state",
      "label": {
        "en": "State",
        "zh_TW": "狀態"
      },
      "preset": "dataset_state",
      "choices": [
        {
          "value": "active",
          "label": {
            "en": "Active",
            "zh_TW": "啟用"
          }
        },
        {
          "value": "deleted",
          "label": {
            "en": "Deleted",
            "zh_TW": "刪除"
          }
        }
      ]
    }
  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": {
        "en": "URL",
	"zh_TW": "網址"
      },
      "preset": "resource_url_upload",
      "upload_label": {
        "en": "File",
        "zh_TW": "檔案"
      }
    },
    {
      "field_name": "name",
      "label": {
        "en": "Name",
        "zh_TW": "名稱"
       },
      "validators": "ignore_missing unicode",
      "form_placeholder": {
        "en": "eg. January 2011 Gold Prices",
        "zh_TW": "例如：2011 年 1 月金價"
      }
    },
    {
      "field_name": "description",
      "label": {
        "en": "Description",
        "zh_TW": "摘要"
      },
      "form_snippet": "markdown.html",
      "form_placeholder": {
        "en": "Some useful notes about the data",
        "zh_TW": "一些與此資料有關的紀錄"
      }
    },
    {
      "field_name": "encoding",
      "label": {
        "en": "Character Encodings",
        "zh_TW": "字元編碼"
      },
      "preset": "select",
      "form_attrs": {
        "data-module": "autocomplete"
      },
      "choices": [
        {
          "value": "big5",
          "label": {
            "en": "Big5",
            "zh_TW": "Big5 (繁體中文大五碼)"
          }
        },
        {
          "value": "utf-8",
          "label": {
            "en": "UTF-8",
            "zh_TW": "UTF-8"
          }
        },
        {
          "value": "latin1",
          "label": {
            "en": "ISO-8859-1",
            "zh_TW": "ISO-8859-1 (西歐字元)"
          }
        },
        {
          "value": "gb2312",
          "label": {
            "en": "GB2312",
            "zh_TW": "GB2312 (簡體中文)"
          }
        },
        {
          "value": "gb18030",
          "label": {
            "en" : "GB18030",
            "zh_TW": "GB18030 (簡體中文)"
          }
        },
        {
          "value": "shift_jis",
          "label": {
            "en": "Shift_JIS",
            "zh_TW": "Shift_JIS (日文)"
          }
        },
        {
          "value": "euc-jp",
          "label": {
            "en": "EUC-JP",
            "zh_TW": "EUC-JP (日文)"
          }
        }
      ]
    },
    {
      "field_name": "resource_crs",
      "label": {
        "en": "Coordinate Systems",
        "zh_TW": "座標參考系統"
      },
      "preset": "prepend_text",
      "prepend_text": "EPSG",
      "validators": "ignore_empty is_positive_integer",
      "form_placeholder": {
        "en": "eg. 4326",
        "zh_TW": "例如：4326"
      },
      "help_text": {
        "en": "EPSG:4326→WGS84 (Default), EPSG:3826→TWD97/TM2 Taiwan, EPSG:3821→TWD67, EPSG:3825→TWD97/TM2 Penghu, EPSG:3828→TWD67/TM2 Taiwan",
	"zh_TW": "EPSG:4326→WGS84 (預設), EPSG:3826→TWD97/TM2 台灣, EPSG:3821→TWD67, EPSG:3825→TWD97/TM2 澎湖, EPSG:3828→TWD67/TM2 台灣"
      }
    },
    {
      "field_name": "format",
      "label": {
        "en": "Format",
        "zh_TW": "格式"
      },
      "preset": "resource_format_autocomplete",
      "form_placeholder": {
        "en": "eg. CSV, XML or JSON",
        "zh_TW": "例如：CSV, XML 或 JSON"
      }
    }
  ]
}
